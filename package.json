{
  "name": "photomatic",
  "private": "true",
  "dependencies": {
    "@fnando/codestyle": "^0.0.13",
    "@fnando/eslint-config-codestyle": "^0.0.9",
    "@hotwired/stimulus": "^3.0.1",
    "@hotwired/turbo-rails": "^7.1.0",
    "@types/jest": "^27.0.3",
    "esbuild": "^0.14.8",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.5.0",
    "i18n-js": "^4.0.0-alpha.12",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "test:ci": "yarn jest --ci",
    "lint": "yarn eslint --max-warnings=0 app && yarn tsc --noEmit --pretty",
    "i18n": "i18n export",
    "build": "yarn i18n && yarn build:js && yarn build:css",
    "build:js": "esbuild app/assets/scripts/*.* --minify --bundle --sourcemap --outdir=app/assets/builds",
    "build:css": "tailwindcss --config config/tailwind.config.js --minify --input ./app/assets/stylesheets/application.css --output ./app/assets/builds/application.css"
  }
}
