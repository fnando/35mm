{
  "name": "photomatic",
  "private": "true",
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "@fnando/codestyle": "^0.0.13",
    "@fnando/email-provider-info": "^0.0.3",
    "@fnando/eslint-config-codestyle": "^0.0.10",
    "@fnando/http": "^0.1.4",
    "@fnando/seagull": "^0.0.5",
    "@hotwired/stimulus": "^3.0.1",
    "@hotwired/turbo-rails": "^7.1.1",
    "@jest/reporters": "^27.5.1",
    "@jest/test-result": "^27.5.1",
    "@rails/activestorage": "^7.0.2",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "@types/jest": "^27.4.1",
    "@types/rails__activestorage": "^7.0.0",
    "autoprefixer": "^10.4.2",
    "esbuild": "^0.14.21",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.9.0",
    "formdata-node": "^4.3.2",
    "husky": "^7.0.4",
    "i18n-js": "^4.0.0-alpha.14",
    "jest": "^27.5.1",
    "jest-hud-reporter": "^0.0.1",
    "lodash": "^4.17.21",
    "node-fetch": "2",
    "postcss": "^8.4.7",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "postinstall": "husky install > /dev/null",
    "test:ci": "yarn jest --ci",
    "lint": "yarn eslint --max-warnings=0 app && yarn tsc --noEmit --pretty",
    "i18n": "i18n export",
    "build": "yarn i18n && yarn build:js && yarn build:css",
    "build:js": "esbuild app/assets/scripts/*.* --minify --bundle --sourcemap --outdir=app/assets/builds",
    "build:css": "postcss ./app/assets/stylesheets/application.css --use postcss-import autoprefixer tailwindcss --config config/postcss.config.js --minify  --output ./app/assets/builds/application.css"
  }
}
