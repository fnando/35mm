<!DOCTYPE html>
<html lang="<%= browser.accept_language.first.code %>">
  <head>
    <%= page_meta %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%#= javascript_importmap_tags %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>

      <%= render "top_bar" %>

      <div class="main-content">
        <%= render "flash_messages" %>

        <div class="page-header">
          <h1 class="page-title"><%= page_meta.title.simple %></h1>
          <p class="page-description"><%= page_meta.description %></p>
        </div>
        <%= yield %>
      </div>

  </body>
</html>
