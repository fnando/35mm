{
  "collectCoverage": true,
  "reporters": ["default", ["jest-hud-reporter", {}]],
  "setupFiles": ["<rootDir>/__tests__/setup.ts"],
  "moduleDirectories": [
    "<rootDir>/node_modules",
    "<rootDir>/app/assets/scripts"
  ],
  "modulePathIgnorePatterns": ["vendor/bundle"],
  "testMatch": ["**/*.test.ts"],
  "testEnvironment": "jsdom",
  "transform": {
    "^.+\\.ts$": ["esbuild-jest", { "sourcemap": true }]
  }
}
